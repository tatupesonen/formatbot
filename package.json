{
  "name": "formatbot",
  "version": "1.9.0",
  "description": "Formats a reacted message using Prettier",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/tatupesonen/formatbot",
  "license": "GPL-3.0",
  "keywords": [],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/index.ts",
    "postinstall": "node ./node_modules/husky/lib/bin install",
    "lint": "run-s fix:*",
    "fix:prettier": "prettier --write src/**",
    "fix:lint": "eslint src/** --ext .ts --max-warnings=0",
    "test": "run-s test:*",
    "test:unit": "yarn jest",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "yarn jest --coverage && open-cli coverage/index.html",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --out build/docs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "release:version": "npx standard-version -s",
    "reset-hard": "git clean -dfx && git reset --hard && yarn"
  },
  "engines": {
    "node": ">=16.6.0"
  },
  "dependencies": {
    "@unibeautify/beautifier-black": "^0.1.2",
    "@unibeautify/beautifier-prettydiff": "^0.6.0",
    "axios": "^0.24.0",
    "date-fns": "^2.23.0",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "fastify": "^4.8.1",
    "prettier": "^2.3.2",
    "prettydiff2": "^2.2.8",
    "prom-client": "^14.0.1",
    "unibeautify": "^0.17.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "cspell": "^5.6.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^28.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.0",
    "standard-version": "^9.3.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typedoc": "^0.23.6",
    "typescript": "^4.4.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn fix:lint",
      "yarn fix:prettier"
    ]
  }
}
